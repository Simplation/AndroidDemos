<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function_summary.take_photo.TakePhotoActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Picture"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Video"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_picture"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_picture_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Picture Video"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_video"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_picture_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Picture Edit"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_picture_video"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_picture_edit_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Picture Edit(Params)"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_picture_edit"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_take_photo_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo Crop"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_picture_edit_params"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_take_photo_crop"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_take_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Video"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_take_photo"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_take_video_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Video(Params)"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_take_video"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTakePhoto"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_take_video_params" />

</androidx.constraintlayout.widget.ConstraintLayout>